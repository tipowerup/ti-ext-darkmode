{
    "name": "tipowerup/ti-ext-darkmode",
    "type": "tastyigniter-package",
    "description": "Adds dark mode to TastyIgniter admin and storefront with scheduling support.",
    "license": "MIT",
    "keywords": [
        "tastyigniter",
        "dark-mode",
        "darkreader",
        "theme"
    ],
    "authors": [
        {
            "name": "TI PowerUp Team",
            "email": "support@tipowerup.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.2",
        "pestphp/pest-plugin-laravel": "^3.0",
        "rector/rector": "^2.0",
        "tipowerup/testbench": "^0.1",
        "tastyigniter/core": "^v4.0"
    },
    "autoload": {
        "psr-4": {
            "Tipowerup\\Darkmode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tipowerup\\Darkmode\\Tests\\": "tests/"
        }
    },
    "extra": {
        "tastyigniter-extension": {
            "code": "tipowerup.darkmode",
            "name": "Dark Mode",
            "icon": {
                "class": "fa fa-moon",
                "color": "#FFF",
                "backgroundColor": "#2D3748"
            },
            "homepage": "https://tipowerup.com"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "composer/installers": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test:lint": "vendor/bin/pint --test --ansi",
        "test:lint-fix": "vendor/bin/pint --ansi",
        "test:refactor": "vendor/bin/rector process --dry-run --ansi",
        "test:refactor-fix": "vendor/bin/rector process --ansi",
        "test:static": "vendor/bin/phpstan analyse --memory-limit=1056M --ansi",
        "test:static-fix": "vendor/bin/phpstan --generate-baseline --memory-limit=1056M --ansi",
        "test:pest": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage --compact",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:static",
            "@test:pest"
        ]
    }
}
